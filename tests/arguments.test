TEST_DESC="Processing of arguments"



if [ -z $1 ]; then
        proc_cnt=3
else
        proc_cnt=$1
fi


test_args[0]="-a srcip,dstip,srcport,dstport,proto -l 100 -o flows -r test.nffile -f "
filter[0]="src port 80 and proto TCP"

test_args[1]="-i 2000-01-31 -s srcip/bpp"
filter[1]=""

#test_args[2]=""
#filter[2]=""

for i in ${!test_args[@]}; do

        if [ -z "${filter[$i]}" ]; then
                mpirun -np $proc_cnt ./arguments ${test_args[$i]}
                args="${test_args[$i]}"
        else
                mpirun -np $proc_cnt ./arguments ${test_args[$i]} "${filter[$i]}"
                args="${test_args[$i]} \"${filter[$i]}\""
        fi


        if [ $? -eq 0 ]; then
                echo "${TEST_DESC} was successful (${proc_cnt} processes)."
                echo "     test-args: ${args}"
        else
                echo "${TEST_DESC} failed - returned $? (${proc_cnt} processes)."
                echo "     test-args: ${args}"
                exit 1
        fi
done

exit 0
